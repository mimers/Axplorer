extends layout

block content
  a(href=upper) up directory
  table
    tr
      td type
      td user
      td group
      td date
      td size
      td name
    each entry in files
      tr
        td(class="type filetype_#{entry.type}")
        td #{entry.owner}
        td #{entry.group}
        td #{entry.time.to}
        td
          span=entry.size
        td
          a(href=entry.name)=entry.name
